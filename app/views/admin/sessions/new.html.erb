<h2 class="text-center mt-5">管理人ログイン</h2>
<div class="container my-3">
  <div class="row mt-3 flex-column align-items-center">
  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-12" %>
    </div>
    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-12" %>
    </div>
    <div class="actions mt-2">
      <%= f.submit "ログイン", class:"btn btn-success mr-2" %>
    </div>
  <% end %>

