<div class="container my-5">
  <div class="row">
    <h2>会員一覧</h2>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-10">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= image_tag customer.get_profile_image, style: "obfect-fit: contain; height: 30px;  width: 30px;", class: 'img-fluid rounded-circle' %>
              <%= customer.name %>
            <% end %>
            </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted == true %>
            有効ユーザー
            <% else %>
              退会ユーザー
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
 </div>
 </div>
 <div class="container">
   <div class="row">
   <div class="col-md-4 offset-md-4 py-2 mt-5">
   <%= paginate @customers, theme: 'bootstrap-5' %>　
   </div>
   </div>
 </div> 
