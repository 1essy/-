<div class="text-center">
   <%= render "layouts/errors", object: @customer %>
</div>
<div class="container my-5">
    <h2 class="text-center">会員編集画面</h2>
  <div class="row mt-3 flex-column align-items-center">
    <%= form_with model:@customer, url:admin_customer_path, local:true  do |f| %>

      <div class="form-group row">
        <%= f.label :ユーザーid, class: "col-sm-5" %>
        <%= f.label @customer.id, class: "col-sm-7" %>
      </div>
      <div class="form-group">
        <%= f.label :画像, class: "col-sm-5 d-inline" %>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group row">
        <%= f.label :名前, class: "col-sm-5" %>
        <%= f.text_field :name, class: "form-control col-sm-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :メールアドレス, class: "col-sm-5" %>
        <%= f.email_field :email, class: "form-control col-sm-7" %>
      </div>
      <div class="row">
        <%= f.label :会員ステータス, class: "ml-3" %>
      </div>
      <div class="form-check ml-4">
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "有効会員" %>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "アカウント停止" %>
      </div>
      <div class="row">
        <%= f.submit "変更を保存する", class:"btn btn-primary mt-4 mx-auto" %>
        <%= link_to "戻る", admin_customer_path(@customer), class:"btn btn-info mt-4 mx-auto" %>
        <%= link_to "ユーザーを削除", admin_customer_path(@customer), method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-danger mt-4 mx-auto" %></p>
      </div>
    <% end %>
  </div>
</div>