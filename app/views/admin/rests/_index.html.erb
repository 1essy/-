<div class="row mt-3">
  <div class="col-sm-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th style="width: 7%">会員ID</th>
          <th style="width: 8%">投稿者名</th>
          <th>画像</th>
          <th style="width: 11%">住所</th>
          <th style="width: 10%">移動方法</th>
          <th style="width: 10%">喫煙不可</th>
          <th style="width: 10%">トイレ有無</th>
          <th>タグ</th>
          <th style="width: 10%">閲覧数</th>
          <th colspan=1></th>
        </tr>
      </thead>
      <tbody>
        <% rests.each do |rest| %>
        <tr>
          <td><%= rest.customer.id %></td>
          <td>
            <%= link_to admin_customer_path(rest.customer) do %>
              <%= image_tag rest.customer.get_profile_image, style: "obfect-fit: contain; height: 60px;  width: 60px;", class: 'img-fluid rounded-circle' %><br>
              <%= rest.customer.name %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_rest_path(rest) do %>
              <%= image_tag rest.get_rest_image, style: "obfect-fit: contain; height: 100px;  width: 100px;", class: 'img-fluid' %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_rest_path(rest) do %>
              <%= rest.address %>
            <% end %>
          </td>
          <td><%= rest.move_method_i18n %></td>
          <td><%= rest.smoking_area_i18n %></td>
          <td><%= rest.toilet_i18n %></td>
          <td><%= link_to rest.category, admin_search_rest_path(keyword: rest.category) %></td>
          <td><%= rest.view_counts.count %></td>
          <td><%= link_to "削除", admin_rest_path(rest), method: :delete, data: { confirm: "本当に削除しますか？"}, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 py-2 mt-5">
      <%= paginate rests, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
