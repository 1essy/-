

  <%= image_tag @rest.image, size: "400x400" %><br>
  <p>説明：<%= @rest.describe %><br></p>
  <p>移動方法：<%= @rest.move_method %><br></p>
  <p>喫煙不可：<%= @rest.smoking_area %><br></p>
  <p>トイレ有無：<%= @rest.toilet %><br></p>
  <% if @rest.favorited_by?(current_customer) %>
    <p>
      <%= link_to rest_favorites_path(@rest), method: :delete do %>
        💗<%= @rest.favorites.count %> 
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to rest_favorites_path(@rest), method: :post do %>
        ♡<%= @rest.favorites.count %> 
      <% end %>
    </p>
  <% end %>
  <% if @rest.customer == current_customer %>
    <%= link_to "編集する", edit_rest_path(@rest) %>
    <%= link_to "削除", rest_path(@rest), method: :delete, data: { confirm: '本当に消しますか？' } %>
  <% end %>
  <div>
  <p>コメント件数：<%= @rest.rest_comments.count %></p>
  <% @rest.rest_comments.each do |rest_comment| %>
    <%= rest_comment.customer.name %>
    <%= rest_comment.created_at.strftime('%Y/%m/%d') %><%= rest_comment.comment %>
    <% if rest_comment.customer == current_customer %>
      <%= link_to "削除", rest_rest_comment_path(rest_comment.rest, rest_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@rest, @rest_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>