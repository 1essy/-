  <div class="container my-5">
    <div class="row">
      <h2>ユーザー情報編集画面</h2>
    </div>
    <div>
    <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件のエラーが発生しました
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
      <% end %>
    <div class="row mt-3 flex-column align-items-center">
    <%= form_with model:@customer, url:customer_path, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :名前, class: "col-sm-5" %>
        <%= f.text_field :name, class: "form-control col-sm-7" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存する", class: "btn btn-primary mt-2 mx-auto" %>
        <%= link_to :back, class: "btn btn-info mt-2 mx-auto" do %>
          <div>戻る</div>
        <% end %>
        <%= link_to "退会する", withdrawal_confirm_path, class: "btn btn-danger mt-2 mx-4" %>
      </div>
    <% end %>

