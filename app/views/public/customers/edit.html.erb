<div class="text-center">
  <%= render "layouts/errors", object: @customer %>
</div>
<div class="container my-5">
    <h2 class="text-center">ユーザー情報編集画面</h2>
  <div class="row mt-3 flex-column align-items-center">
  <%= form_with model:@customer, url:customer_path, local:true do |f| %>
    <div class="form-group">
      <%= f.label :画像, class: "col-sm-5" %>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :名前, class: "col-sm-5" %>
      <%= f.text_field :name, class: "form-control col-sm-7" %>
    </div>
    
    <div class="form-group">
      <%= f.submit "変更を保存する", class: "btn btn-primary mt-2 mx-auto" %>
      <%= link_to "戻る", customer_path(@customer), class: "btn btn-info mt-2 ml-2" %>
      <%#= link_to "退会する", customer_path(@customer), method: :delete, data: { confirm: '本当に退会しますか？' }, class:"btn btn-danger mt-2 ml-2" %>
      <%= link_to "退会する", withdrawal_confirm_path, class: "btn btn-danger mt-2 mx-4" %>
    </div>
    <% end %>
  </div>
</div>
