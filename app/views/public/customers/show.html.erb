<p><%= current_customer.name %>さんのユーザーページ</p>
<p><%= link_to "編集する", edit_customer_path(current_customer) %></p>


<% @rests.each do |rest| %>
  <%= link_to rest_path(rest) do %>
    <p><%= image_tag rest.get_image(300,300) %><br></p>
  <% end %>
  <p>移動方法：<%= rest.move_method_i18n %><br></p>
  <p>喫煙不可：<%= rest.smoking_area_i18n %><br></p>
  <p>トイレ有無：<%= rest.toilet_i18n %><br></p>
  <% if rest.favorited_by?(current_customer) %>
  <p>
    <%= link_to rest_favorites_path(rest), method: :delete do %>
      💗<%= rest.favorites.count %>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to rest_favorites_path(rest), method: :post, class: "text-dark mr-5" do %>
      ♡<%= rest.favorites.count %>
    <% end %>
  <% end %>
  </p>
  <p><%= link_to "#{rest.rest_comments.count} コメント", rest_path(rest.id) %></p>
<% end %>


<div class="container">
   <div class="row">
   <div class="col-md-4 offset-md-4 py-2 mt-5">
   <%= paginate @rests %>
   </div>
   </div>
 </div> 