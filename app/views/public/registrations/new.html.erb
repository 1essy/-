<h2 class="text-center mt-5">新規登録</h2>
<div class="container my-3">
  <div class="row mt-3 flex-column align-items-center">
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :名前, class: "col-sm-4" %><br>
    <%= f.text_field :name, class: "form-control col-sm-12" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-12" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-12" %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認） %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-12" %>
    </div>

    <div class="action mt-2">
      <%= f.submit "登録",class:"btn btn-success mr-2" %>
      <%= render "public/shared/links" %>
    </div>
  <% end %>
  </div>
</div>

